}
.HxCardBox .Bottom .phone .phoneIcon{
  width: 17rpx;
  height: 30rpx;
  float: left;
}
.HxCardBox .Bottom .phone text{
  font-size: 25rpx;
  color: #898989;
  left: 44rpx;
  float: left;
  position: absolute;
  top: 0;
  width: 210rpx;
}
.HxCardBox .Bottom .phone .PhoneRedIcon{
  width: 29rpx;
  height: 29rpx;
